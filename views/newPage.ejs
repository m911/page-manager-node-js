<script src="https://cdn.tiny.cloud/1/pg67egwdb9sr87jozdy2mlaaqrtyyzuvpztvn37c0gg5wxwc/tinymce/6/tinymce.min.js"
    referrerpolicy="origin"></script>

<form action="/cPanel/new" method="post" class="row g-3" id="newPageForm">
    <div class="mb-3">
        <label for="titleFormInput" class="form-label">Title</label>
        <input type="text" class="form-control" id="titleFormInput" name="title" required>
    </div>
    <div class="mb-3">
        <label for="metaFormInput" class="form-label">Meta description</label>
        <input type="text" class="form-control" id="metaFormInput" name="metaDescription" required>
    </div>
    <div class="mb-3">
        <label for="contentTextArea" class="form-label">Page Content</label>
        <textarea class="form-control" id="contentTextArea" rows="4" name="pageContent"></textarea>
    </div>
    <div class="mb-3">
        <label for="titleFormInput" class="form-label">URL</label>
        <input type="text" class="form-control" id="titleFormInput"
            placeholder="Enter desired url in lowercase without spaces between and after. Ex. 'examplepage'" name="url"
            required pattern="[a-z]+">
    </div>
    <div class="mb-3">
        <a href="/cPanel" type="reset" class="btn btn-warning mb-3">Back</a>
        <button type="reset" class="btn btn-danger mb-3">Reset</button>
        <button type="submit" class="btn btn-success mb-3" id="formSubmitBtn">Submit</button>
    </div>
</form>
<script type="module" src="/cPanel/new/newPage.js"></script>
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
        mergetags_list: [
            { value: 'First.Name', title: 'First Name' },
            { value: 'Email', title: 'Email' },
        ]
    });
</script>